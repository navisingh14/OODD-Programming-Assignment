<%= form_for(@room) do |f| %>
    <%= render 'shared/error_messages', object: @room %>


    <%= f.label :number,class: 'form-control' %><br>
    <%= f.text_field :number %>
    <br><br>
    <%= f.label :size, class: 'form-control' %><br>
    <%= f.select(:size, options_for_select([['Small - 4 chairs', 'Small - 4 chairs'], ['Medium - 6 chairs', 'Medium - 6 chairs'],
                                               ['Large - 12 chairs','Large - 12 chairs']])) %>
    <br><br>
    <%= f.label :building, class: 'form-control' %><br>
    <%= f.select(:building, options_for_select([['D.H.Hill', 'D.H.Hill'], ['James B.Hunt', 'James B.Hunt']]))%>
    <br><br>
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>