<h1>The Library App</h1>
<h2>Listing Members</h2>

<table>
  <thead>
  <tr>
    <th>Username</th>
    <th>Email Id</th>
  </tr>
  </thead>

  <tbody>
<% @member.each do |member| %>
    <tr>
      <td><%= member.username %></td>
      <td><%= member.email %></td>
      <td><% if current_member.admin? && !member.admin? %>
            | <%= link_to "delete", member, method: :delete, data: { confirm: "You sure?"} %>
            <% elsif current_member.superadmin? && !current_member?(member) %>
        |  | <%= link_to "delete", member, method: :delete, data: { confirm: "You sure?"} %>
        <% end %></td>
    </tr>
<% end %>
</tbody>
</table>

<br>

<br><br>
<li><%= link_to "Home", current_member %></li> <span style="display:inline-block; width: 3%;"></span>