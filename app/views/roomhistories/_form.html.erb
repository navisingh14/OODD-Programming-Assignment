<%= form_for(@roomhistory) do |f| %>

    <%= render 'shared/error_messages', object: @roomhistory%>



    <%= f.label "Room Number" %><br>
    <%= f.hidden_field :number, :value => params[:number] %>
    <%=  params[:number] %>

    <%= f.label "From" %><br>
    <%= f.hidden_field :time_from, :value => params[:time_from] %>
    <%=  params[:time_from] %>

    <%= f.label "To" %><br>
    <%= f.hidden_field :time_to, :value => params[:time_to] %>
    <%= params[:time_to] %>

    <%= f.hidden_field "roomid", :value => params[:roomid] %>

    <%= f.label :userid %><br>
    <% if current_member.admin? %>
        <%= f.text_field :userid, class: 'form-control' %>
    <% else %>
        <%= @current_member.username %>
    <% end %>

    <br><br>
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>